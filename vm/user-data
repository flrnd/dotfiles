#cloud-config
users:
  - name: user
    primary_group: user
    groups: users, sudo
    lock_passwd: false
    ssh_authorized_keys:
      - ssh-ed25519
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    shell: /bin/bash
    runcmd:
      - sed -i -e '/^PermitRootLogin/s/^.*$/PermitRootLogin no/' /etc/ssh/sshd_config
      - sed -i -e '$aAllowUsers user' /etc/ssh/sshd_config
      - restart ssh
